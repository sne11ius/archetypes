# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET      /*path/                                    @controllers.Application.untrail(path: String)
GET     /                                           @controllers.Application.index
GET     /archetypes                                 @controllers.ArchetypesController.archetypes(groupId: Option[String], artifactId: Option[String], version: Option[String], description: Option[String])
GET     /archetypes/:groupId/:artifactId/:version   @controllers.ArchetypesController.archetypeDetails(groupId: String, artifactId: String, version: String)
GET     /rest/archetypes                            @controllers.ArchetypesController.restArchetypes(groupId: Option[String], artifactId: Option[String], version: Option[String], description: Option[String])
POST    /reimportArchetypes                         @controllers.ArchetypesController.reimportArchetypes

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
